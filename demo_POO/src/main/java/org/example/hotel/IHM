package Hotel;

import java.util.Scanner;

public class IHM {
    private static Scanner scanner = new Scanner(System.in);
    private static Hotel hotel = new Hotel();

        public static void main(String[] args) {
        boolean quitter = false;

        while (!quitter) {
            afficherMenu();
            int choix = scanner.nextInt();
            scanner.nextLine(); // Clear the newline character

            switch (choix) {
                case 1:
                   private static void ajouterClient() {
                    System.out.print("Entrez l'identifiant du client : ");
                    int clientID = scanner.nextInt();
                    scanner.nextLine();

                    System.out.print("Entrez le nom du client : ");
                    String clientnom = scanner.nextLine();

                    System.out.print("Entrez le prénom du client : ");
                    String clientprenom = scanner.nextLine();

                    System.out.print("Entrez le numéro de téléphone du client : ");
                    int NumTel = scanner.nextInt();
                    scanner.nextLine();

                    Client nouveauClient = new Client(clientID, clientnom, clientprenom, NumTel);
                    hotel.ajouterClient(nouveauClient);
                    System.out.println("Client ajouté avec succès !");
                }
                    break;
                case 2:
                    // Ajouter une chambre
                    break;
                case 3:
                    // Effectuer une réservation
                    break;
                case 4:
                    // Afficher les informations de l'hôtel (clients, chambres, réservations)
                    break;
                case 5:
                    quitter = true;
                    System.out.println("Au revoir !");
                    break;
                default:
                    System.out.println("Choix invalide. Veuillez entrer un chiffre valide.");
                    break;
            }
        }

        scanner.close();
    }

    private static void afficherMenu() {
        System.out.println("----- Menu -----");
        System.out.println("1. Ajouter un client");
        System.out.println("2. Ajouter une chambre");
        System.out.println("3. Effectuer une réservation");
        System.out.println("4. Afficher les informations de l'hôtel");
        System.out.println("5. Quitter");
        System.out.print("Choisissez une option : ");
    }
}
